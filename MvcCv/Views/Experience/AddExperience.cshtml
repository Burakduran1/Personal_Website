
@{
    ViewBag.Title = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Add New Experince Page</h4>
<br />
<form method="post">
    <input type="text" name="Title" class="form-control " placeholder="Write The Title" />
    <br />
    <input type="text" name="SubTitle" class="form-control " placeholder="Write The Subtitle" />
    <br />
    <input type="text" name="Date" class="form-control" placeholder="Write The Date" />
    <br />
    <textarea placeholder="Write The Description" name="Description" class="form-control" rows="5" cols="12"></textarea>
    <br />
    <button class="btn btn-info">Save</button>
</form>


